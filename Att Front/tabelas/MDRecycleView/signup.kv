<Signup>:
    MDFloatLayout:
        radius: [0, 0, 0, 0]
        md_bg_color: app.theme_cls.primary_dark
        MDLabel:
            text:'Cadastro de Novo Usu√°rio'
            halign:"center"
            pos_hint: {"center_x": 0.5, "center_y":0.87}


        MDTextField:
            id: data
            icon_left: "account"
            hint_text: 'Nome'
            fill_color_normal: app.theme_cls.primary_dark
            size_hint_x: .65
            pos_hint: {"center_x": 0.5, "center_y":0.77}
            write_tab: False
            multiline: False

        MDTextField:
            id: email_text_field
            icon_left: "email"
            hint_text:"E-mail"
            fill_color_normal: app.theme_cls.primary_dark
            size_hint_x: .65
            pos_hint: {"center_x": 0.5, "center_y":0.70}
            write_tab: False
            multiline: False


        MDTextField:
            id: password_text_field
            icon_left: "key"
            hint_text: "Senha"
            fill_color_normal: app.theme_cls.primary_dark
            size_hint_x: .65
            pos_hint: {"center_x": 0.5, "center_y":0.63}
            write_tab: False
            multiline: False
            password: True
            on_text_validate: confirm_password_text_field.focus=True

   
        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_x": 0.8, "center_y":0.63}
            pos: password_text_field.width - self.width + dp(8), 0
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                password_text_field.password = False if password_text_field.password is True else True

        MDTextField:
            id: confirm_password_text_field
            icon_left: "key"
            hint_text: "Repita a Senha"
            fill_color_normal: app.theme_cls.primary_dark
            size_hint_x: .65
            pos_hint: {"center_x": 0.5, "center_y":0.56}
            write_tab: False
            multiline: False
            password: True

        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_x": 0.8, "center_y":0.56}
            pos: confirm_password_text_field.width - self.width + dp(8), 0
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                confirm_password_text_field.password = False if confirm_password_text_field.password is True else True

        MDFillRoundFlatButton:
            id: register_button
            text:'    Criar conta    '
            pos_hint:{"center_x": .5, "center_y": .48}
            on_release: root.do_register(email_text_field.text, password_text_field.text, confirm_password_text_field.text)
        MDTextButton:
            text:'Voltar para Tela de Login'
            pos_hint:{"center_x": .5, "center_y": .06}
            on_press: root.go_login()

